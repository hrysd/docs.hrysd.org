!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %title= data.page.title || 'The Middleman'
    = stylesheet_link_tag 'application'
    = javascript_include_tag  'all'
  %body{ class: page_classes }
    %div#container
      %header{ role: 'banner' }
        %h1= link_to ':soy_milk:', '/'
        %ul
          %li= link_to 'Twitter',  'https://twitter.com/hrysd'
          %li= link_to 'Github',   'https://github.com/hrysd'
          %li= link_to 'Archives', '#'
      = yield
      %footer
        - if paginate
          - if prev_page
            %p= link_to 'Previous page', prev_page
          - if next_page
            %p= link_to 'Next page', next_page
        %p.copyright @hrysd
